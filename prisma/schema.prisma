// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  // We removed the custom 'output' so it defaults to node_modules (Standard)
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// User Model
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("USER") // "ADMIN" or "USER"
  phone     String?  // Buat komunikasi cepat via WA
  agency    String?  // Asal Instansi (Kampus/Sekolah) biar admin tau demografi
  createdAt DateTime @default(now())
  application Application? // Relasi ke Application (One User has One Application)
}

model Application {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id])

  fullName  String
  campus    String
  faculty   String?  // <--- Pastikan baris ini ADA
  major     String
  semester  String
  
  startDate DateTime? // <--- Pastikan ini juga ada
  endDate   DateTime? // <--- Pastikan ini juga ada
  
  cvUrl       String?
  proposalUrl String? // <--- Pastikan ini juga ada
  
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
